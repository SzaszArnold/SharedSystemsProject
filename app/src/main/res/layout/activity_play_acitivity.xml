<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayAcitivity" android:background="@color/def">
    <TextView
            android:layout_width="150dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/nyunyu"
            android:layout_height="50dp"
            android:id="@+id/timerdisplay"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp" android:layout_marginRight="36dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.792"
    />
    <Button
            android:layout_width="372dp"
            android:layout_height="453dp"
            android:id="@+id/btn_Touch" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.028"
            android:background="@android:drawable/btn_default"/>
    <TextView
            android:layout_width="150dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:id="@+id/scoreText"
            android:textColor="@color/nyunyu"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/timerdisplay" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.792"/>
    <Button
            android:text="@string/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_getScore"
            app:layout_constraintTop_toBottomOf="@+id/timerdisplay"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp" android:layout_marginRight="36dp"
            app:layout_constraintVertical_bias="0.344"/>
    <Button
            android:text="@string/start_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_StartGame" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/btn_getScore"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scoreText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.281"/>
    <TextView
            android:layout_width="335dp"
            android:layout_height="73dp"
            android:id="@+id/finalScore"
            app:layout_constraintTop_toTopOf="@+id/btn_Touch" app:layout_constraintBottom_toBottomOf="@+id/btn_Touch"
            app:layout_constraintEnd_toEndOf="@+id/btn_Touch"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="@+id/btn_Touch"/>
</androidx.constraintlayout.widget.ConstraintLayout>